{
  "version": 2,
  "builds": [
    {
      "src": "backend/index.js",
      "use": "@vercel/node",
      "config": {
        "includeFiles": [
          "backend/static/**",
          "backend/views/**"
        ]
      }
    },
    {
      "src": "backend/static/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/backend/static/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/backend/index.js"
    }
  ],
  "env": {
    "MONGODB_URI": "@mongodb-uri"
  }
}